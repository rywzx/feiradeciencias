<body>
  <div id="map"></div>

  <div id="painel-botoes">
    <button onclick="toggleIluminacao()">Alternar Iluminação</button><br><br>
    <button onclick="localizarUsuario()">Minha Localização</button><br><br>
    <button onclick="denunciar()">Denunciar Área Perigosa</button><br><br>
    <button onclick="contato()">Contato</button><br><br>
    <button onclick="zoomIn()">+</button>
    <button onclick="zoomOut()">-</button>
  </div>

  <script>
    const map = L.map('map').setView([-28.4835, -48.7825], 17);

    let camadaAtual = L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      maxZoom: 19,
      attribution: '&copy; OpenStreetMap'
    }).addTo(map);

    const iluminadas = [
      [-28.482940, -48.783350],
      [-28.483056, -48.782750]
    ];

    const iluminadosLayer = L.layerGroup();
    iluminadas.forEach(coords => {
      L.circle(coords, {
        color: 'yellow',
        fillColor: 'yellow',
        fillOpacity: 0.5,
        radius: 20
      }).addTo(iluminadosLayer);
    });
    iluminadosLayer.addTo(map);

    function toggleIluminacao() {
      if (map.hasLayer(iluminadosLayer)) {
        map.removeLayer(iluminadosLayer);
      } else {
        map.addLayer(iluminadosLayer);
      }
    }

    let marcadorUsuario;

    function localizarUsuario() {
      map.locate({ setView: true, maxZoom: 18 });
    }

    map.on('locationfound', function (e) {
      if (marcadorUsuario) {
        marcadorUsuario.setLatLng(e.latlng);
      } else {
        marcadorUsuario = L.marker(e.latlng).addTo(map).bindPopup("Você está aqui.").openPopup();
      }
    });

    map.on('locationerror', function() {
      alert('Não foi possível obter sua localização. Verifique as permissões do navegador.');
    });

    function denunciar() {
      alert('Área perigosa registrada. Obrigado pela sua contribuição!');
    }

    function contato() {
      alert('Em caso de emergência, ligue 190 ou procure um responsável no evento.');
    }

    function zoomIn() {
      map.zoomIn();
    }

    function zoomOut() {
      map.zoomOut();
    }
  </script>
</body>
</html>
